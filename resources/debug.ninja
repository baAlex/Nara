
# "Works on my machine ¯\_(ツ)_/¯"

cflags = -O0 -std=c11 -Wall -Wextra -Wconversion -pedantic -g -DDEBUG $
-I./source/lib-glad -I./source/lib-japan/include -I./source/lib-samplerate/src

cflags_relaxed = -O0 -g -DDEBUG $
-I./source/lib-glad -I./source/lib-japan/include -I./source/lib-samplerate/src

lflags = -lglfw -lportaudio -lmruby -lm


rule ToHeader
 command = python3 ./source/c-ify.py $in $out

rule CompileC
 command = clang -fcolor-diagnostics $cflags -c $in -o $out

rule CompileCRelaxed
 command = clang -fcolor-diagnostics $cflags_relaxed -c $in -o $out

rule Link
 command = clang -fuse-ld=lld $in $lflags -o $out

rule CompileMRuby
 command = mrbc -g -o $out $in


# Inlined files
build ./build/debug/engine/debug-fragment.c:   ToHeader ./source/engine/debug-fragment.glsl
build ./build/debug/engine/debug-vertex.c:     ToHeader ./source/engine/debug-vertex.glsl
build ./build/debug/engine/terrain-fragment.c: ToHeader ./source/engine/terrain-fragment.glsl
build ./build/debug/engine/terrain-vertex.c:   ToHeader ./source/engine/terrain-vertex.glsl

build ./build/debug/engine/debug-fragment.o:   CompileC ./build/debug/engine/debug-fragment.c
build ./build/debug/engine/debug-vertex.o:     CompileC ./build/debug/engine/debug-vertex.c
build ./build/debug/engine/terrain-fragment.o: CompileC ./build/debug/engine/terrain-fragment.c

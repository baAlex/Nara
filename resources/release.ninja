
cflags = `pkg-config --cflags glfw3 portaudio-2.0` -O3 -flto -mtune=generic $
-I./source/lib-glad -I./source/lib-japan/include -I./source/lib-samplerate/src

lflags = `pkg-config --libs glfw3 portaudio-2.0` -lmruby -lm


rule generate
 command = python3 ./source/c-ify.py $in $out

rule compile
 command = cc $cflags -c $in -o $out

rule link
 command = cc $in $lflags -o $out


# Automatically generated files
build ./build/release/engine/terrain-fragment.c: generate ./source/engine/terrain-fragment.glsl

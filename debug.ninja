
cflags = `pkg-config --cflags glfw3 glesv2` -O0 -std=c11 -Wall -Wextra -pedantic -g -DDEBUG -I./source/lib-japan/include
lflags = `pkg-config --libs glfw3 glesv2` -lm

rule generate
 command = ruby ./tools/c-ify.rb $in > $out

rule compile
 command = cc $cflags -c $in -o $out

rule link
 command = cc $in $lflags -o $out


# Automatically generated files
build ./objects/debug/shaders/terrain-fragment.c: generate ./source/shaders/terrain-fragment.glsl
build ./objects/debug/shaders/terrain-vertex.c:   generate ./source/shaders/terrain-vertex.glsl
build ./objects/debug/shaders/red-fragment.c:     generate ./source/shaders/red-fragment.glsl
build ./objects/debug/shaders/red-vertex.c:       generate ./source/shaders/red-vertex.glsl

build ./objects/debug/shaders/terrain-fragment.o: compile ./objects/debug/shaders/terrain-fragment.c
build ./objects/debug/shaders/terrain-vertex.o:   compile ./objects/debug/shaders/terrain-vertex.c
build ./objects/debug/shaders/red-fragment.o:     compile ./objects/debug/shaders/red-fragment.c
build ./objects/debug/shaders/red-vertex.o:       compile ./objects/debug/shaders/red-vertex.c

# Lib Japan
build ./objects/debug/lib-japan/buffer.o:     compile ./source/lib-japan/source/buffer.c
build ./objects/debug/lib-japan/dictionary.o: compile ./source/lib-japan/source/dictionary.c
build ./objects/debug/lib-japan/endianness.o: compile ./source/lib-japan/source/endianness.c
build ./objects/debug/lib-japan/image.o:      compile ./source/lib-japan/source/image.c
build ./objects/debug/lib-japan/image-sgi.o:  compile ./source/lib-japan/source/image-sgi.c
build ./objects/debug/lib-japan/list.o:       compile ./source/lib-japan/source/list.c
build ./objects/debug/lib-japan/matrix.o:     compile ./source/lib-japan/source/matrix.c
build ./objects/debug/lib-japan/status.o:     compile ./source/lib-japan/source/status.c
build ./objects/debug/lib-japan/vector.o:     compile ./source/lib-japan/source/vector.c

# Nara-dbg
build ./objects/debug/nara.o:           compile ./source/nara.c
build ./objects/debug/context.o:        compile ./source/context.c
build ./objects/debug/context-input.o:  compile ./source/context-input.c
build ./objects/debug/context-opengl.o: compile ./source/context-opengl.c
build ./objects/debug/context-time.o:   compile ./source/context-time.c
build ./objects/debug/entity.o:         compile ./source/entity.c
build ./objects/debug/terrain.o:        compile ./source/terrain.c
build ./objects/debug/camera.o:         compile ./source/game/camera.c
build ./objects/debug/point.o:          compile ./source/game/point.c

# Sdk-dbg
build ./objects/debug/sdk.o:    compile ./source-sdk/sdk.c

# Link
build nara-dbg: link ./objects/debug/nara.o $
./objects/debug/context.o $
./objects/debug/context-input.o $
./objects/debug/context-opengl.o $
./objects/debug/context-time.o $
./objects/debug/entity.o $
./objects/debug/terrain.o $
./objects/debug/camera.o $
./objects/debug/point.o $
./objects/debug/shaders/terrain-fragment.o $
./objects/debug/shaders/terrain-vertex.o $
./objects/debug/shaders/red-fragment.o $
./objects/debug/shaders/red-vertex.o $
./objects/debug/lib-japan/buffer.o $
./objects/debug/lib-japan/dictionary.o $
./objects/debug/lib-japan/endianness.o $
./objects/debug/lib-japan/image.o $
./objects/debug/lib-japan/image-sgi.o $
./objects/debug/lib-japan/list.o $
./objects/debug/lib-japan/matrix.o $
./objects/debug/lib-japan/status.o $
./objects/debug/lib-japan/vector.o

build sdk-dbg: link ./objects/debug/sdk.o $
./objects/debug/lib-japan/buffer.o $
./objects/debug/lib-japan/dictionary.o $
./objects/debug/lib-japan/endianness.o $

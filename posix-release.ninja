
cflags = `pkg-config --cflags glfw3 glesv2 portaudio-2.0` -O3 -flto -mtune=generic -I./source/lib-japan/include
lflags = `pkg-config --libs glfw3 glesv2 portaudio-2.0` -lm

rule generate
 command = python3 ./tools/c-ify.py $in $out

rule compile
 command = cc $cflags -c $in -o $out

rule link
 command = cc $in $lflags -o $out


# Automatically generated files
build ./objects/release/engine/red-fragment.c:     generate ./source/engine/red-fragment.glsl
build ./objects/release/engine/red-vertex.c:       generate ./source/engine/red-vertex.glsl
build ./objects/release/engine/terrain-fragment.c: generate ./source/engine/terrain-fragment.glsl
build ./objects/release/engine/terrain-vertex.c:   generate ./source/engine/terrain-vertex.glsl

# Engine
build ./objects/release/engine/context-input.o:    compile ./source/engine/context-input.c
build ./objects/release/engine/context-opengl.o:   compile ./source/engine/context-opengl.c
